<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <TabPane prefHeight="200.0" prefWidth="400.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Home">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Text layoutX="98.0" layoutY="19.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Hi welcome to our book Search" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Search">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Label layoutX="14.0" layoutY="14.0" text="Search by:" />
                                <ComboBox  fx:id="cbSearchOptions"  layoutX="84.0" layoutY="9.0" prefWidth="150.0" />

                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Login">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180" prefWidth="200">
                     <children>
                        <Label layoutX="14.0" layoutY="28.0" text="Login:" />
                        <TextArea layoutX="61.0" layoutY="26.0" prefHeight="20.0" prefWidth="145.0" />
                        <TextArea layoutX="82.0" layoutY="64.0" prefHeight="20.0" prefWidth="125.0" />
                        <Label layoutX="16.0" layoutY="66.0" text="Password:" />
                     </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</GridPane>
